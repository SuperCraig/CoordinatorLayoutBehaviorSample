<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/main_activity_shadow_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shadow"
        app:layout_behavior="@string/shadow_behavior"
        tools:layout_width="100dp"
        tools:layout_height="100dp"
        />

    <liou.rayyuan.theamazingbehavior.widget.DraggableTextView
        android:id="@+id/draggable_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FDBD2E"
        android:textSize="24sp"
        android:padding="8dp"
        android:text="I'm a draggable text"
        />

    <Button
        android:id="@+id/main_activity_go_nest_scrolling_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Open NestedScrolling Page"
        app:layout_behavior="@string/shadow_behavior"
        />

</android.support.design.widget.CoordinatorLayout>